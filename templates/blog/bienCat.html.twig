{% extends 'base.html.twig' %}

{% block title %}Liste des Biens!{% endblock %}

{% block body %}

<div class = "jumbotron">
    <div style="text-align:center">
        <h1>Catégorie n°&nbsp<strong style="color:blue">{{ categorie.id }}&nbsp : &nbsp{{categorie.libelle}}&nbsp</strong></h1>
    </div>
</div>
</br>  
<div class="container-fluid">
    <h1 style="text-align:center;background-color:yellow">{{ categorie.biens | length }} biens :</h1> 
    <div class="row">   
        <div class="col-3">
            <h3><strong style="color:blue">Description</strong></h3>
        </div>
        <div class="col-2">
            <h3><strong style="color:blue">Surface (m²)</strong></h3>
        </div>
        <div class="col-3">
            <h3><strong style="color:blue">Image</strong></h3>
        </div>
        <div class="col-2">
            <h3><strong style="color:blue">Etage (ième)</strong></h3>
        </div>
        <div class="col-2">
            <h3><strong style="color:blue">Chambres (nb)</strong></h3>
        </div>
    </div>
    {% for bien in categorie.biens %}    
    <div class="row">
        <div class="col-3">
            {{ bien.description }} 
        </div>
        <div class="col-2">
                {{ bien.surface  }}
        </div>
        <div class="col-3">
            <img src=" {{ bien.image }} " alt="" width="220" heigth="10">
        </div>
        {% if bien.etage != null %}
        <div class="col-2">
            {{ bien.etage }}
        </div>
        <div class="col-2">
            {{ bien.chambre }}
        </div>
        {% else %}
        <div class="col-3">
             - 
        </div>
        <div class="col-3">
             - 
        </div>
        {% endif %}
    </div>
    <hr>   
    {% endfor %}
</div> 
          
{% endblock %}