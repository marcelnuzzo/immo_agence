{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}/Liste des biens du type de transaction{% endblock %}

{% block body %}

<div class = "jumbotron">
    <div style="box-shadow: 15px 10px 10px black;background-color:cyan">
        <h1 id="haut" style="color:black;text-align:center;">Liste des biens :</h1>
    </div>    <h2 style="text-align:center">Type :&nbsp{{ libelle }}</h2>
</div>
<table class="table table-striped table-bordered table-hover">
    <tr style="background-color: #4CAF50;color: white">
        <th><h3>catégorie</h3></th>
        <th><h3>description</h3></th>
        <th><h3>image</h3></th>
        <th><h3>surface</h3></th>
        <th><h3>chambre</h3></th>
        <th><h3>étage</h3></th>
        <th><h3>statut</h3></th>
        <th><h3>Date</h3></th>
    </tr>
    {%for tipe in tipes %}
        {% if tipe.statut == "archivé" %}
            <tr  style="background-color:yellow">
        {% else %}
            <tr>
        {% endif %}
            <td>{{ tipe.libelle }}</td>
            <td>{{ tipe.description }}</td>
            <td>
                <p>
                    <img src=" {{ tipe.image }} " alt="" width="220">
                </p>
            </td>
            <td>{{ tipe.surface }}</td>
            <td>{{ tipe.chambre }}</td>
            <td>{{ tipe.etage }}</td>
            <td>{{ tipe.statut }}</td>
            <td>{{ tipe.created_at | date('d/m/Y') }}</td>
        </tr>
    {% endfor %}
</table>

{% endblock %}