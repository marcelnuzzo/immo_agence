{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}/catégorie{% endblock %}

{% block body %}

<div class = "jumbotron">
    <h1 id="haut" style="text-decoration:underline;color:blue;text-align:center">Liste des catégories</h1>
</div>
<table class="table table-striped table-bordered table-hover">
    <tr>
        <th><h2>Libellé</h2></th>
    </tr>
    {%for categorie in categories %}
        <tr>
            <td>{{ categorie.libelle }}</td>
        </tr>
    {% endfor %}
</table>

{% endblock %}